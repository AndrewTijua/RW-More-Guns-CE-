	<recipeMaker>
      <researchPrerequisite>CE_AdvancedFirearms</researchPrerequisite>
    </recipeMaker>
    <weaponTags>
      <li>CE_Sidearm</li>
      <li>CE_OneHandedWeapon</li>
    </weaponTags>

  <ThingDef ParentName="BaseHumanMakeableGun_CE">
    <defName>M1903A3_Springfield</defName>
    <label>M1903A3 Springfield</label>
    <description>An ancient bolt action rifle. Popular for hunting game.</description>
    <graphicData>
      <texPath>Things/Weapons/M1903A3_Springfield</texPath>
      <graphicClass>Graphic_Single</graphicClass>
